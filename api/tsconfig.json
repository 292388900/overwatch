{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "types": ["reflect-metadata", "node"],
    "lib": ["es6"],
    "noImplicitAny": false,
    "sourceMap": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules"
  ]
}
